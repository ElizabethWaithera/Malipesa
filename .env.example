# Hedera NSE Tokenization Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI API Key - Get from https://platform.openai.com/api-keys
# Required for the AI advisor functionality
OPENAI_API_KEY=sk-xxxx...

# Hedera Network - Choose testnet, previewnet, or mainnet
HEDERA_NETWORK=testnet

# Hedera Account - Get testnet credentials from https://portal.hedera.com/
HEDERA_ACCOUNT_ID=your_hedera_account_id_here
HEDERA_PRIVATE_KEY=your_hedera_private_key_here

# Logging
LOG_LEVEL=info

# Security (optional)
# JWT_SECRET=your_jwt_secret
# SESSION_SECRET=your_random_session_secret_here

# Hedera Network Configuration
# Replace with your testnet account ID
HEDERA_OPERATOR_ID=0.0.xxxxx
# Same as your private key
HEDERA_OPERATOR_KEY=302xxx...

# NSE Data Configuration
NSE_API_URL=https://api.example.com/nse
NSE_API_KEY=demo_api_key_for_testing
DATA_REFRESH_INTERVAL=60000

# AI Configuration
AI_MODEL_NAME=gpt-4o-mini
AI_MAX_TOKENS=1000

# Database Configuration
MONGODB_URI=your_mongodb_uri_here

# SerpAPI (for market news - optional)
# SERPAPI_KEY=your_serpapi_key_here

# Database Configuration (if needed)
# DB_HOST=localhost
# DB_USER=user
# DB_PASSWORD=password
# DB_NAME=malipesa

# Web3 Storage (if used)
# WEB3_STORAGE_TOKEN=eyJxx...

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret
